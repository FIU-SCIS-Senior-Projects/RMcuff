<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/offwhite"
    tools:context="com.example.marc.rmcuff.NewCaregiver">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/firstName"
        android:id="@+id/firstName_textView"
        android:layout_marginTop="58dp"
        android:paddingRight="30dp"
        android:textColor="@color/title_text"
        android:shadowColor="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/phone_textView"
        android:layout_alignEnd="@+id/phone_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="25sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:id="@+id/editText_firstName"
        android:layout_below="@+id/firstName_textView"
        android:background="#ffffffff"
        android:singleLine="true"
        android:maxLines="1"
        android:minLines="1"
        android:inputType="textPersonName|text"
        android:textColor="#ff000000"
        android:shadowColor="#ff7d7d7d"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lastName"
        android:id="@+id/lastName_textView"
        android:paddingRight="30dp"
        android:textColor="@color/title_text"
        android:shadowColor="#ff000000"
        android:layout_below="@+id/editText_firstName"
        android:layout_alignRight="@+id/email_textView"
        android:layout_alignEnd="@+id/email_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="25sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:id="@+id/editText_lastName"
        android:background="#ffffffff"
        android:layout_below="@+id/lastName_textView"
        android:singleLine="true"
        android:maxLines="1"
        android:minLines="1"
        android:inputType="textPersonName|text"
        android:textColor="#ff000000"
        android:shadowColor="#ff7d7d7d"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/emailAddress"
        android:id="@+id/email_textView"
        android:paddingRight="30dp"
        android:textColor="@color/title_text"
        android:shadowColor="#ff000000"
        android:layout_below="@+id/editText_lastName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/phone_textView"
        android:layout_alignEnd="@+id/phone_textView"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="25sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:id="@+id/editText_email"
        android:layout_below="@+id/email_textView"
        android:background="#ffffffff"
        android:singleLine="true"
        android:maxLines="1"
        android:minLines="1"
        android:inputType="textEmailAddress|text"
        android:textColor="#ff000000"
        android:shadowColor="#ff7d7d7d"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phoneNumber"
        android:id="@+id/phone_textView"
        android:paddingRight="30dp"
        android:textColor="@color/title_text"
        android:shadowColor="#ff000000"
        android:layout_below="@+id/editText_email"
        android:layout_alignLeft="@+id/editText_lastName"
        android:layout_alignStart="@+id/editText_lastName"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="25sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:id="@+id/editText_phone"
        android:background="#ffffffff"
        android:layout_below="@+id/phone_textView"
        android:singleLine="true"
        android:maxLines="1"
        android:minLines="1"
        android:inputType="phone|text"
        android:textColor="#ff000000"
        android:shadowColor="#ff7d7d7d"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addCaregiverStatus"
        android:layout_above="@+id/addCaregiverButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addCaregiver"
        android:id="@+id/addCaregiverButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="createNewCaregiver"
        android:textStyle="bold"
        android:textColor="@color/box_color"
        android:background="@color/splash_color"/>

</RelativeLayout>
