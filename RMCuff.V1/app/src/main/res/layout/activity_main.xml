<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:onClick="openSettingsPage">

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sendMessages"
        android:id="@+id/SendReadingsButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="sendTextMessage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/caregivers"
        android:id="@+id/caregiversButton"
        android:layout_above="@+id/SendReadingsButton"
        android:layout_alignRight="@+id/SendReadingsButton"
        android:layout_alignEnd="@+id/SendReadingsButton"
        android:layout_alignLeft="@+id/SendReadingsButton"
        android:layout_alignStart="@+id/SendReadingsButton"
        android:onClick="startCaregivers" />


</RelativeLayout>
